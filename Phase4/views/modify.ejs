    <style>
        /* add default color for animation start  */
        /* toggle this class */

        .color-bg-start {
            background-color: salmon;
        }

        /* toggle class bg-animate-color */

        .bg-animate-color {
            animation: random-bg .5s linear infinite;
        }

        /* add animation to bg color  */

        @keyframes random-bg {
            from {
                filter: hue-rotate(0);
            }
            to {
                filter: hue-rotate(360deg);
            }
        }

        .mad-btn {
            /* change bg color to get different hues    */
            background-color: salmon;
            color: white;
            padding: 10px 15px 10px 10px;
            border: none;
            transition: all .3s ease;
            border-radius: 5px;
            text-transform: uppercase;
            outline: none;
            align-self: center;
            text-align: center;
            cursor: pointer;
            font-weight: bold;

        }

        .mad-btn:hover {
            animation: random-bg .5s linear infinite, grow 1300ms ease infinite;
        }

        .start-fun {
            background-color: #fff !important;
            /* change color of button text when fun is started   */
            color: salmon !important;
        }

        /* pulsating effect on button */
        @keyframes grow {
            0% {
                transform: scale(1);
            }
            14% {
                transform: scale(1.3);
            }
            28% {
                transform: scale(1);
            }
            42% {
                transform: scale(1.3);
            }
            70% {
                transform: scale(1);
            }
        }
    </style>

    <script>
        function updateRegister() {
            var title = document.getElementById("title").value;
            var type = document.getElementById("type").value;
            var runtime = document.getElementById("runtime").value;
            var start_year = document.getElementById("start_year").value;
            var genre = document.getElementById("genre").value;
            var rating = document.getElementById("rating").value;
            var viewing_class = document.getElementById("viewing_class").value;

            var url = "http://localhost:3000/updateRegister";
            var httpRequest = new XMLHttpRequest();
            var parameter = "title=" + title +
                "&type=" + type +
                "&runtime=" + runtime +
                "&start_year=" + start_year +
                "&genre=" + genre +
                "&rating=" + rating +
                "&viewing_class=" + viewing_class;

            httpRequest.open("POST", url, true);
            httpRequest.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            httpRequest.send(parameter);

            alert("영화 수정이 완료되었습니다.")

            window.location.href = "http://localhost:3000/admin";
        }
    </script>

    <script>
        function modifyMovie() {
            var modifyTitle = prompt("수정할 영화의 제목을 입력하세요");
            var url = "http://localhost:3000/modify";
            var httpRequest = new XMLHttpRequest();
            var parameter = "title=" + modifyTitle;

            httpRequest.open("POST", url, true);
            httpRequest.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            httpRequest.send(parameter);

            if(modifyTitle == null)
                alert("올바른 영화 제목을 입력해주세요");
            else
                window.location.href = "http://localhost:3000/modify";
        }
