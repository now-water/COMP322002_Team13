    <script>
        function rateBtn() {
            // var title = $(.waves-effect waves-light btn-large).parent().siblings().('#title').text();
            var title = event.target.getAttribute('value');
            console.log(title);
            var score = prompt("영화의 평점을 입력하세요. (0~10)");
            if (score < 0 || score > 10) {
                alert("잘못된 값을 입력하였습니다");
            } else {
                var reqUrl = 'http://localhost:3000/rate';
                var httpRequest = new XMLHttpRequest();
                var parameter = 'score=' + score + '&title=' + title;
                httpRequest.open("POST", reqUrl, true);
                httpRequest.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                httpRequest.send(parameter);
                console.log(reqUrl);
                console.log("전송완료");
            }
        }
    </script>
    <style>
        /* add default color for animation start  */
        /* toggle this class */

        .color-bg-start {
            background-color: salmon;
        }

        /* toggle class bg-animate-color */

        .bg-animate-color {
            animation: random-bg .5s linear infinite;
        }

        /* add animation to bg color  */

        @keyframes random-bg {
            from {
                filter: hue-rotate(0);
            }
            to {
                filter: hue-rotate(360deg);
            }
        }

        .mad-btn {
            /* change bg color to get different hues    */
            background-color: salmon;
            color: white;
            padding: 10px 15px 10px 10px;
            border: none;
            transition: all .3s ease;
            border-radius: 5px;
            text-transform: uppercase;
            outline: none;
            align-self: center;
            text-align: center;
            cursor: pointer;
            font-weight: bold;
            width:10%;
            height:30%;
        }

        .mad-btn:hover {
            animation: random-bg .5s linear infinite, grow 1300ms ease infinite;
        }

        .start-fun {
            background-color: #fff !important;
            /* change color of button text when fun is started   */
            color: salmon !important;
        }

        /* pulsating effect on button */
        @keyframes grow {
            0% {
                transform: scale(1);
            }
            14% {
                transform: scale(1.3);
            }
            28% {
                transform: scale(1);
            }
            42% {
                transform: scale(1.3);
            }
            70% {
                transform: scale(1);
            }
        }
    </style>
